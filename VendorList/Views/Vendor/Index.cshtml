@{
  Layout = "_Layout";
}

@using List.Models;

    <h3>Vendors:</h3>

    @if (@Model.Count == 0)
    {
      <h3>No Vendors have been added yet</h3>
    } 

    @foreach (Vendor vendor in Model)
    {
      <h3><a href='/vendor/@vendor.Id'>@vendor.Name - @vendor.Description</a></h3>
    }

    <p><a href='/'>Back home</a></p>